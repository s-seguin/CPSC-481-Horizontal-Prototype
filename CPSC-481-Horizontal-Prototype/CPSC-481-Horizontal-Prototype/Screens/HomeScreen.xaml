<Window x:Name="window_homeScreen" x:Class="CPSC_481_Horizontal_Prototype.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481_Horizontal_Prototype"
        mc:Ignorable="d"
        Title="HomeScreen" Height="768" Width="1280" WindowState="Maximized" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="#FF3393AB">
        <StackPanel x:Name="tabPanel" HorizontalAlignment="Left"  VerticalAlignment="Stretch" Width="150" Background="#FF122331">
            <Image x:Name="logo" Height="100" Source="../Resources/Images/logo_med.png"/>
            <Button x:Name="btn_addTab" Height="48" Width="155" Content="New Tab +" BorderBrush="{x:Null}" Background="#FF02B694" Foreground="#FFA4DDCE" FontFamily="Segoe UI Light" FontSize="18.667" Click="btn_addTab_Click"/>
        </StackPanel>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="150,0,0,0">
            <Grid.Background>
                <ImageBrush ImageSource="/;component/Resources/Images/home_background.png"/>
            </Grid.Background>

            <Label x:Name="lbl_date" Content="Thursday March 9th, 2017" HorizontalContentAlignment="Right" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="32" Foreground="White" FontFamily="Segoe UI Semilight" FontSize="14"/>
        </Grid>

    </Grid>
</Window>
