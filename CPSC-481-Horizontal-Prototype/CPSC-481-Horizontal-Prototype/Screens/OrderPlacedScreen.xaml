            <Label x:Name="lbl_warning" Content="Order Placed" VerticalContentAlignment="Center" FontSize="34" Foreground="White" Margin="26,0,0,0" Height="70" />
        </WrapPanel>
        <Image x:Name="logo" Width="100" Source="/CPSC-481-Horizontal-Prototype;component/Resources/Images/placedOrder.png" HorizontalAlignment="Left" Margin="50,162,0,138"/>
        <TextBlock x:Name="textBlock" FontSize="24" Margin="214,216,25,148" Foreground="#FF213F57" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Center" Height="36" FontFamily="Segoe UI Light">
            <Run Text="You order has been sent to the kitchen."  />

        </TextBlock>


    </Grid>
</Window>