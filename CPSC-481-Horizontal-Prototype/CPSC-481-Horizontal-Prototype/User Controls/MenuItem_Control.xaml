<UserControl x:Class="CPSC_481_Horizontal_Prototype.MenuItem_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Horizontal_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="165" d:DesignWidth="165">
    <Grid>
        <Button x:Name="btn_viewItem" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="150" Click="btn_viewItem_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="../Resources/Images/burger.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="lbl_itemName" Content="Item Name" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF3B1B1"/>
        <Label x:Name="lbl_itemPrice" Content="$00.00" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FF9CDA80"/>
    </Grid>
</UserControl>
