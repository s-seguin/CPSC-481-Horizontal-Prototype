<UserControl x:Class="CPSC_481_Horizontal_Prototype.User_Controls.paymentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Horizontal_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="530">

    <Grid x:Name="grid_tray_item" Background="White" Height="Auto" Width="Auto" >
        <Label x:Name="item_name" Content="Name" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Width="200" VerticalContentAlignment="Center"/>
        <Label x:Name="item_quantity" Content="x " FontSize="18" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Width="50" Margin="298,0,0,0" VerticalContentAlignment="Center"/>
        <Label x:Name="item_price" Content="$ "  FontSize="18" FontFamily="Segoe UI Light" HorizontalAlignment="Right" Width="75" VerticalContentAlignment="Center" Margin="0,0,71,0"/>
        <Separator Width="Auto" Height="1" VerticalAlignment="Bottom" Margin="0" Foreground="#FFF4F4F4" />
    </Grid>

</UserControl>
